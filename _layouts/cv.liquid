---
layout: default
---
{% assign resume = site.data.resume %}
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
          ><i class="fa-solid fa-file-pdf"></i
        ></a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div class="cv">
      {% if resume %}
        {% for data in resume %}
          {% if site.jsonresume and site.jsonresume.size > 0 %}
            {% unless site.jsonresume contains data[0] %}
              {% continue %}
            {% endunless %}
          {% endif %}
          {% if data[0] == 'meta' or data[1].size == 0 %} {% continue %} {% endif %}
          {% assign section_id = data[0] %}
          {% assign section_title = data[0] | replace: '_', ' ' | capitalize %}
          {% case data[0] %}
            {% when 'academic_appointments' %}
              {% assign section_title = 'Academic appointments' %}
              {% assign section_items = data[1] %}
            {% when 'industry_and_advisory' %}
              {% assign section_title = 'Industry and advisory' %}
              {% assign section_items = data[1] %}
            {% when 'work' %}
              {% assign section_title = 'Work' %}
              {% assign section_items = data[1] %}
            {% else %}
              {% assign section_items = data[1] %}
          {% endcase %}
          <a class="anchor" id="{{ section_id }}"></a>
          <div class="card mt-3 p-3">
            <h3 class="card-title font-weight-medium">{{ section_title }}</h3>
            <div>
              {% case data[0] %}
                {% when 'basics' %}
                  {% include resume/basics.liquid %}
                {% when 'education' %}
                  {% include resume/education.liquid %}
                {% when 'academic_appointments' %}
                  {% include resume/work.liquid items=section_items %}
                {% when 'industry_and_advisory' %}
                  {% include resume/work.liquid items=section_items %}
                {% when 'awards' %}
                  {% include resume/awards.liquid %}
                {% when 'publications' %}
                  {% include resume/publications.liquid %}
                {% when 'press' %}
                  {% include resume/press.liquid %}
                {% when 'languages' %}
                  {% include resume/languages.liquid %}
                {% else %}
              {% endcase %}
            </div>
          </div>
        {% endfor %}
      {% else %}
        {{ content }}
      {% endif %}
    </div>
  </article>
</div>
