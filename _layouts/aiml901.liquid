---
layout: none
---
<!doctype html>
<html lang="{{ site.lang }}">
  <head>
    {% include head.liquid %}
  </head>
  <body class="aiml901-body {% unless site.footer_fixed %}sticky-bottom-footer{% endunless %}">
    <div class="aiml901-main container py-5">
      <div class="post aiml901-page">
        <header class="aiml901-hero">
          <div class="aiml901-hero__top">
            <p class="aiml901-hero__label">{{ page.banner_title | default: 'AIML901 - AI Foundations for Managers - Lab' }}</p>
            {% if site.enable_darkmode %}
              <button id="light-toggle" class="aiml901-hero__toggle" title="Change theme">
                <i class="ti ti-moon-filled" id="light-toggle-dark"></i>
                <i class="ti ti-sun-filled" id="light-toggle-light"></i>
              </button>
            {% endif %}
          </div>
          <h1 class="aiml901-hero__title">{{ page.title }}</h1>
          {% if page.author %}
            <p class="aiml901-hero__meta">{{ page.author }}</p>
          {% endif %}
          {% if page.subtitle %}
            <p class="aiml901-hero__subtitle">{{ page.subtitle }}</p>
          {% elsif page.description %}
            <p class="aiml901-hero__subtitle">{{ page.description }}</p>
          {% endif %}
        </header>

        <article class="aiml901-content">
          {{ content }}
        </article>
      </div>
    </div>

    {% include footer.liquid %}

    {% include scripts/jquery.liquid %}
    {% include scripts/bootstrap.liquid %}
    {% include scripts/misc.liquid %}
    {% include scripts/analytics.liquid %}
    {% include scripts/back_to_top.liquid %}
  </body>
</html>
